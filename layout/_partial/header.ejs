<header class="header">
    <div class="header-container">
        <div class="header-container-title">
            <a href="<%= config.root %>" class="header-title"><%= config.title %></a>
        </div>
        <nav class="header-nav">
            <ul class="menu">
                <% for (var i in theme.menu){ %>
                    <li class="menu-item"><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
                <% } %>
            </ul>
        </nav>
    </div>
</header>